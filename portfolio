    <footer>
        <p>&copy; 2024 K. Dhinagar. All rights reserved. | Built with passion and code.</p>
    </footer>

    <script>
        // Smooth scroll for navigation links
        document.querySelectorAll('nav a').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });

        // View Certificate Function
        function viewCertificate(filePath) {
            window.open(filePath, '_blank');
        }

        // Intersection Observer for animations on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.animation = 'fadeInUp 0.8s ease-out forwards';
                }
            });
        }, observerOptions);

        document.querySelectorAll('.about-card, .education-item, .project-card, .contact-card, .certificate-card').forEach(el => {
            observer.observe(el);
        });
    </script>
</body>
</html>
